<div align="center">
  <caption><h2><ins><i>EMPLOYEES LIST</i></ins></h2></caption>
</div>
<p id="notice"><%= notice %></p>
<table class="table" style="width:65%;height:90%;" align="center">
  <tr class="bdrfirst">
    <th>Employee</th>
    <th>Role</th>
    <th>Project Count</th>
    <th>image</th>
    <th>Actions</th>
  </tr>
  <tbody>
    <% @employees.each do |employee| %>
      <tr style="background-color:#32A9EE;color:white;">
        <td><%= employee.employee_name %></td>
        <td><%= employee.role.try(:role_name) %></td>
        <td><%= employee.employees_projects.count %></td>
        <td><img src="<%= employee.image.url %>" class='img-ur'></td>
        <td><%= link_to '| Show |', employee %>
            <%= link_to '| Edit', edit_employee_path(employee) %>
            <%= link_to '| Destroy |', employee, method: :delete, data: { confirm: 'Are you sure?' } %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div align="center">
  <button><%= link_to 'New Employee', new_employee_path %></button>
</div>