<p><%= link_to 'blog_page', blogs_path %></p>

<h2>Add a comment:</h2>
<%= form_with model: @comment, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_field :comment %>
  </p>
    <p>
    <%= form.hidden_field :user_id, value:"#{current_user.id}" %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>