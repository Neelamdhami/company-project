<div align="center">
  <caption><h2><ins><i>PROJECT LIST</i></ins></h2></caption>
</div>
<p id="notice"><%= notice %></p>
<table class="table" style="width:65%;height:90%;" align="center">
  <tr class="bdrfirst">
    <th ><h3>project details</h3></th>
    <th>Action</th>
  </tr>
  <tbody>
    <% @projects.each do |project| %>
      <tr style="background-color:#32A9EE;color:white;">
        <td><%= project.project_name %></td>
        <td><%= link_to '|Show|', project %>
            <%= link_to 'Edit', edit_project_path(project) %>
            <%= link_to '|Destroy|', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div align="center">
  <button><%= link_to 'New Project', new_project_path %></button>
</div>