<div align="center">
<caption><h2><ins><i>PROJECT LIST</i></ins></h2></caption>
</div>
<p id="notice"><%= notice %></p>

<table style="width:65%;height:90%;" align="center">
  <tr>
<th colspan="4" style="background-color:#5E1D55;color:white;"><h3>Employee details</h3></th>
</tr>

  <tbody>
    <% @projects.each do |project| %>
      <tr style="background-color:#32A9EE;color:white;">
        <td><%= project.project_name %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div align="center">
<button><%= link_to 'New Project', new_project_path %></button>
</div>