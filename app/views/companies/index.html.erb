<div align="center">
<%= form_tag companies_path, :method => "get" do %>   
<%= text_field_tag :search, params[:search] %>   
<%= submit_tag "Search" %>  
<% end %>
<% if @companies.empty? %>
  <h1>Oops! No Result Found!</h1>
<%else%>
  <caption><h2><ins><i>COMPANY LIST</i></ins></h2></caption>
</div>
<div align="center">
  <button ><%= link_to 'New Company', new_company_path %></button>
</div>
<p id="notice"><%= notice %></p>
  <table class="table" style="width:65%;height:90%;" align="center">
    <tr class="bdrfirst">
      <th>Company</th>
      <th>Employee</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
    <tbody>
      <% @companies.each do |company| %>
        <tr  style="background-color:#32A9EE;color:white;">
          <td><%= company.company_name %></td>
          <td><%= company.employees.count %></td>
          <td><img src="<%= company.image.url %>" class='img-ur'></td>
          <td><%= link_to '|Show |', company %>
              <%= link_to 'Edit', edit_company_path(company) %>
              <%= link_to '|Destroy|', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %> 
<br>

